<?xml version="1.0"?>
<config>
	<modules>
		<Segment_Analytics>
			<version>1.0.0</version>
		</Segment_Analytics>
	</modules>
	<global>
		<blocks>
			<analytics>
				<class>Segment_Analytics_Block</class>
			</analytics>
		</blocks>
		<helpers>
			<analytics>
				<class>Segment_Analytics_Helper</class>
			</analytics>
		</helpers>

	</global>
	<frontend>
		<layout>
			<updates>
				<analytics>
					<file>analytics.xml</file>
				</analytics>
			</updates>
		</layout>
	</frontend>
	<default>
	    <segment_analytics>
	        <options>
	            <customer_traits>
created_at
email
first_name
last_name
middle_name
name
is_active
updated_at
total_orders
total_spent
</customer_traits>
	        </options>
	    </segment_analytics>
	</default>
</config>

